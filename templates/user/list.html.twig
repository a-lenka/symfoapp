{% extends 'base.html.twig' %}

{% block title %}{{ 'Users'|trans }}{% endblock title %}

{% block content %}
    <h1>{{ 'Users'|trans }}</h1>

    <table class="responsive-table highlight">
        <thead>
            <tr>
                {{ include('user/_table-headers.html.twig') }}

                <th scope="col">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    {{ include('user/_table-row.html.twig') }}

                    {# User actions field #}
                    <td class="center-align">
                        <a href="{{ path('user_details', {'id': user.id }) }}" class="modal-trigger"
                           data-target="materialize-modal">
                            <i class="material-icons">info_outline</i>
                        </a>

                        <a href="{{ path('user_update', {'id': user.id }) }}" class="modal-trigger"
                           data-target="materialize-modal">
                            <i class="material-icons">refresh</i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock content %}
