{% form_theme form 'themes/materialize-fields.html.twig' %}

<h4>{{ 'Reset password'|trans }}</h4>

{{ form_start(form, {'action': path('reset')}) }}
    {{ form_errors(form) }}

    {{ form_row(form.currentPassword) }}
    {{ form_row(form.newPassword) }}

    <div class="row">
        {{ form_row(form.submit) }}
    </div>
{{ form_end(form) }}
