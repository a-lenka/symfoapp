{%- if task is defined -%}
    <th scope="col">{{- 'ID'|trans -}}</th>
    <th scope="col" class="center-align">{{- 'Icon'|trans -}}</th>
    <th scope="col">{{- 'Task title'|trans -}}</th>
    <th scope="col">{{- 'Deadline date'|trans -}}</th>
    <th scope="col">{{- 'Task state'|trans -}}</th>
{%- elseif tasks is defined and sort_property is defined and sort_order is defined -%}
    <th scope="col">
        {%- if sort_property == 'id' and sort_order == 'asc' -%}
            <a href="{{ path('task_list_sorted', {'sort_property': 'id', 'sort_order': 'desc' }) }}"
               class="active">
                <i class="material-icons">arrow_drop_down</i>
            </a>
        {%- elseif sort_property == 'id' and sort_order == 'desc' -%}
            <a href="{{ path('task_list_sorted', {'sort_property': 'id', 'sort_order': 'asc' }) }}"
               class="active">
                <i class="material-icons">arrow_drop_up</i>
            </a>
        {%- elseif sort_property != 'id' or sort_order == 'default' -%}
            <a href="{{ path('task_list_sorted', {'sort_property': 'id', 'sort_order': 'desc' }) }}">
                <i class="material-icons">arrow_drop_down</i>
            </a>
        {%- endif -%}

        {{- 'ID'|trans -}}
    </th>

    <th scope="col" class="center-align">{{- 'Icon'|trans -}}</th>

    <th scope="col">
        {%- if sort_property == 'title' and sort_order == 'asc' -%}
