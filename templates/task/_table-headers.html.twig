                <i class="material-icons">arrow_drop_up</i>
            </a>
        {%- elseif sort_property != 'title' or sort_order == 'default' -%}
            <a href="{{ path('task_list_sorted', {'sort_property': 'title', 'sort_order': 'desc' }) }}">
                <i class="material-icons">arrow_drop_down</i>
            </a>
        {%- endif -%}

        {{- 'Task title'|trans -}}
    </th>

    <th scope="col">
        {%- if sort_property == 'dateDeadline' and sort_order == 'asc' -%}
